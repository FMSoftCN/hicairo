#!/bin/sh

./configure \
    --disable-static \
    --enable-shared \
    --enable-gtk-doc=yes \
    --enable-xlib=yes \
    --enable-xlib-xrender=no \
    --enable-xcb=no \
    --enable-qt=no \
    --enable-fc=no \
    --enable-minigui=yes \
    --enable-drm=yes \
    --enable-gl=yes \
    --enable-glesv2=no \
    --enable-glesv3=yes \
    --enable-egl=yes \
    --enable-glx=yes \
    --enable-drm=no
